<%= simple_form_for(@registration, html: { class: 'form-horizontal' }) do |f| %>
    <%= f.input :student_id, collection: @valid_students, prompt: "Select student..." %>
    <%= f.select :payment_status, options_for_select(["deposit","full"]) %>
    <%= f.input :points_earned %>
    <%= f.input :camp_id, collection: [[@registration.camp.name, @registration.camp.id]], include_blank: false%>
  
    <div class="form-actions">
      <%= f.submit nil, class: 'button radius' %>
      <%= link_to 'Back to list of camps', camps_path, :class => 'button secondary radius' %>
    </div>

<% end %>