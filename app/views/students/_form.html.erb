<%= simple_form_for(@student, html: { class: 'form-horizontal' }) do |f| %>
 
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :date_of_birth, label: "Date of birth", as: :string, :input_html => {:class => "avg datepicker"} %>	
    <%= f.input :rating %>
   <%= f.select :family_id, options_for_select(Family.all.map{|s|[s.family_name, s.id]}) %>
    <%= f.input :active %>


    <div class="form-actions">
      <%= f.submit nil, class: 'button radius' %>
      <%= link_to 'Back to list of students', students_path, :class => 'button secondary radius' %>
    </div>

<% end %>
